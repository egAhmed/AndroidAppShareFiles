<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape >
            <solid android:color="#695e3b"/>

            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
            <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
        </shape>
    </item>

    <item>
        <shape >
            <solid android:color="#E4002B"/>

            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
            <corners android:bottomRightRadius="15dp" android:bottomLeftRadius="15dp"
                android:topLeftRadius="15dp" android:topRightRadius="15dp"/>
        </shape>
    </item>

</selector>